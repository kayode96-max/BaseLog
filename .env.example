# Wallet Connect Project ID (Get from: https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Covalent API Key (Get from: https://www.covalenthq.com/)
NEXT_PUBLIC_COVALENT_API_KEY=your_covalent_api_key_here

# Pinata API Keys (Get from: https://app.pinata.cloud/)
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_JWT=your_pinata_jwt_here

# Base Network Configuration
NEXT_PUBLIC_BASE_CHAIN_ID=8453
NEXT_PUBLIC_JOURNAL_REGISTRY_ADDRESS=0x...deployed_contract_address

# Optional: Goldsky API (Alternative to Covalent)
# NEXT_PUBLIC_GOLDSKY_API_KEY=your_goldsky_api_key_here
